{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "types": [
            "@wdio/cucumber-framework",
            "@wdio/selenium-standalone-service",
            "expect-webdriverio",
            "jest",
            "node",
            "webdriverio/async"
        ]
    },
    "include": [
        "next-env.d.ts",
        "jest.config.ts",
        "**/*.ts",
        "**/*.tsx",
        "wdio/step-definitions/test.steps.ts.bak"
    ],
    "exclude": ["node_modules"]
}
